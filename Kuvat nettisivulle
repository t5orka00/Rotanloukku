<table>
<tr>
  <th>Image Name</th>
  <th>Rottakuvat</th>
</tr>
<?php
$files = glob("./uploads/*.*");
for ($i = 0; $i < count($files); $i++) {
    $image = $files[$i];
    $supported_file = array(
        'gif',
        'jpg',
        'jpeg',
        'png'
    );

    $ext = strtolower(pathinfo($image, PATHINFO_EXTENSION));
    if (in_array($ext, $supported_file)) {
      echo "<tr><td>";
      echo basename($image);
      echo "</td><td>";
     // echo "<img src='$dir/$file'><br>";
      echo '<img src="' . $image . '" ,width=200px, height=200px /><br>';
      echo "</td></tr>";
} else {
continue;
}
}
?>
</table>

